@{
    ViewData["Title"] = "Պատվերի կատարում";
}
<h2>Գնում իրականացնելու ֆորմա</h2>

<form method="post" class="form-horizontal" role="form">
    <input type="hidden" value="@ViewBag.PhoneId" name="PhoneId" />
    <p>Պատվիրելու համար լրացրեք հետևյալ դաշտերը:</p>
    <div class="form-group">
        <label for="User" class="col-md-2 control-label">Անուն:</label>
        <div class="col-md-4">
            <input type="text" name="User" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="Address" class="col-md-2 control-label">Հասցե:</label>
        <div class="col-md-4">
            <input type="text" name="Address" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Հեռախոս:</label>
        <div class="col-md-4">
            <input type="text" name="ContactPhone" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="ՈՒղարկել" />
        </div>
    </div>
</form>